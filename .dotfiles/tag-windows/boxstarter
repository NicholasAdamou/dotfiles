# Misc.
msiexec.exe /i http://go.just-install.it

# Taskbar items
Install-ChocolateyPinnedTaskBarItem "$env:programfiles\Google\Chrome\Application\chrome.exe"

# Windows Updates
Install-WindowsUpdate -acceptEula
